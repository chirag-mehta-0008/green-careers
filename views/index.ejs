<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EcoCareers - Premium Hub</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
        body { font-family: 'Outfit', sans-serif; }
        .fade-in { animation: fadeIn 0.6s cubic-bezier(0.16, 1, 0.3, 1); }
        @keyframes fadeIn { from { opacity: 0; transform: translateY(20px); } to { opacity: 1; transform: translateY(0); } }
        
        /* Custom Scrollbar */
        ::-webkit-scrollbar { width: 8px; }
        ::-webkit-scrollbar-track { background: #f0fdf4; }
        ::-webkit-scrollbar-thumb { background: #10b981; border-radius: 10px; }
        ::-webkit-scrollbar-thumb:hover { background: #059669; }
    </style>
</head>
<body class="bg-gradient-to-br from-emerald-50 via-teal-50 to-cyan-50 min-h-screen flex flex-col text-slate-800">

    <nav class="fixed top-0 w-full z-50 transition-all duration-300">
        <div class="absolute inset-0 bg-emerald-900/90 backdrop-blur-md shadow-lg"></div>
        <div class="container mx-auto px-6 py-4 relative flex justify-between items-center">
            <a href="/" class="text-2xl font-bold flex items-center gap-2 group">
                <div class="bg-white/10 p-2 rounded-lg group-hover:bg-white/20 transition">
                    <i class="fas fa-leaf text-emerald-400"></i>
                </div>
                <span class="text-white tracking-tight">Eco<span class="text-emerald-300">Careers</span></span>
            </a>
            
            <div class="hidden md:flex items-center gap-2 bg-emerald-800/50 px-4 py-1.5 rounded-full border border-emerald-500/30">
                <span class="relative flex h-2.5 w-2.5">
                  <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
                  <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-emerald-500"></span>
                </span>
                <span class="text-emerald-100 text-xs font-semibold tracking-wider">LIVE FEED</span>
            </div>
        </div>
    </nav>

    <div class="h-24"></div>

    <div class="container mx-auto px-4 py-8 max-w-6xl relative z-10">
        
        <div class="bg-white rounded-3xl shadow-xl shadow-emerald-900/5 p-1 border border-white/50">
            <div class="bg-gradient-to-b from-white to-emerald-50/30 rounded-[1.3rem] p-6 md:p-8">
                
                <form action="/app" method="GET" class="flex flex-col gap-8">
                    
                    <div class="flex justify-center">
                        <div class="inline-flex bg-gray-100/80 p-1.5 rounded-2xl border border-gray-200 shadow-inner">
                            <label class="cursor-pointer relative">
                                <input type="radio" name="source" value="linkedin" class="peer sr-only" <%= source === 'linkedin' ? 'checked' : '' %> onchange="this.form.submit()">
                                <div class="px-6 py-2.5 rounded-xl text-gray-500 font-semibold transition-all duration-300 peer-checked:bg-white peer-checked:text-emerald-700 peer-checked:shadow-md flex items-center gap-2">
                                    <i class="fas fa-briefcase"></i> <span class="hidden sm:inline">Corporate Jobs</span>
                                </div>
                            </label>

                            <label class="cursor-pointer relative">
                                <input type="radio" name="source" value="twitter" class="peer sr-only" <%= source === 'twitter' ? 'checked' : '' %> onchange="this.form.submit()">
                                <div class="px-6 py-2.5 rounded-xl text-gray-500 font-semibold transition-all duration-300 peer-checked:bg-white peer-checked:text-black peer-checked:shadow-md flex items-center gap-2">
                                    <i class="fab fa-twitter"></i> <span class="hidden sm:inline">Direct Hiring</span>
                                </div>
                            </label>
                        </div>
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-12 gap-4">
                        
                        <div class="md:col-span-4 group">
                            <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-1.5 ml-1">Search Role</label>
                            <div class="relative transition-all duration-300 group-focus-within:scale-[1.02]">
                                <i class="fas fa-search absolute left-4 top-4 text-emerald-500/60"></i>
                                <input type="text" name="keyword" value="<%= searchParams.keyword %>" class="w-full pl-11 p-3.5 rounded-2xl bg-white border border-gray-200 outline-none focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 transition font-medium text-gray-700 shadow-sm" placeholder="e.g. ESG Analyst">
                            </div>
                        </div>

                        <div class="md:col-span-3 group">
                            <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-1.5 ml-1">Work Mode</label>
                            <div class="relative">
                                <i class="fas fa-laptop-house absolute left-4 top-4 text-emerald-500/60"></i>
                                <select name="work_type" class="w-full pl-11 p-3.5 rounded-2xl bg-white border border-gray-200 outline-none focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 transition font-medium text-gray-700 shadow-sm cursor-pointer appearance-none">
                                    <option value="">Any Type</option>
                                    <option value="Remote" <%= searchParams.work_type === 'Remote' ? 'selected' : '' %>>Remote</option>
                                    <option value="Hybrid" <%= searchParams.work_type === 'Hybrid' ? 'selected' : '' %>>Hybrid</option>
                                    <option value="On-site" <%= searchParams.work_type === 'On-site' ? 'selected' : '' %>>On-site</option>
                                </select>
                                <i class="fas fa-chevron-down absolute right-4 top-4 text-gray-300 text-xs pointer-events-none"></i>
                            </div>
                        </div>

                        <div class="md:col-span-3 group">
                            <label class="block text-[10px] font-bold text-gray-400 uppercase tracking-widest mb-1.5 ml-1">Location</label>
                            <div class="relative">
                                <i class="fas fa-map-marker-alt absolute left-4 top-4 text-emerald-500/60"></i>
                                <select name="location" class="w-full pl-11 p-3.5 rounded-2xl bg-white border border-gray-200 outline-none focus:border-emerald-500 focus:ring-4 focus:ring-emerald-500/10 transition font-medium text-gray-700 shadow-sm cursor-pointer appearance-none">
                                    <option value="India" <%= searchParams.location === 'India' ? 'selected' : '' %>>India</option>
                                    <option value="USA" <%= searchParams.location === 'USA' ? 'selected' : '' %>>USA</option>
                                    <option value="UK" <%= searchParams.location === 'UK' ? 'selected' : '' %>>UK</option>
                                </select>
                                <i class="fas fa-chevron-down absolute right-4 top-4 text-gray-300 text-xs pointer-events-none"></i>
                            </div>
                        </div>
                        
                        <div class="md:col-span-2 flex gap-2 items-end">
                            <button type="submit" class="flex-1 bg-gradient-to-r from-emerald-600 to-teal-600 hover:from-emerald-500 hover:to-teal-500 text-white font-bold py-3.5 rounded-2xl shadow-lg shadow-emerald-600/20 transition transform active:scale-95 flex items-center justify-center">
                                <i class="fas fa-arrow-right"></i>
                            </button>
                            
                            <button type="submit" name="refresh" value="true" class="bg-orange-500 hover:bg-orange-400 text-white font-bold py-3.5 px-5 rounded-2xl shadow-lg shadow-orange-500/20 transition transform active:scale-95" title="Force Refresh">
                                <i class="fas fa-sync-alt animate-spin-slow"></i>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="container mx-auto px-4 py-4 flex-grow max-w-6xl">
        
        <% if(error || results.length === 0) { %>
            <div class="flex flex-col items-center justify-center py-20 bg-white/50 backdrop-blur-sm rounded-3xl border border-dashed border-emerald-200/50 text-center animate-pulse">
                <div class="bg-white p-6 rounded-full shadow-sm mb-6">
                    <i class="fas fa-search text-4xl text-emerald-200"></i>
                </div>
                <h3 class="text-2xl font-bold text-gray-700">Starting Search...</h3>
                <p class="text-gray-400 mt-2 max-w-sm">We are scanning LinkedIn & X (Twitter) for the best opportunities.</p>
            </div>
        <% } else { %>
            
            <div id="jobs-container" class="grid gap-6 <%= source === 'linkedin' ? 'grid-cols-1' : 'grid-cols-1 md:grid-cols-2' %>">
                
                <% if(source === 'linkedin') { %>
                    <% results.forEach((job, index) => { %>
                        <div class="job-card bg-white rounded-2xl p-6 border border-gray-100 shadow-sm hover:shadow-2xl hover:shadow-emerald-900/10 hover:-translate-y-1 transition-all duration-300 group relative hidden fade-in" data-index="<%= index %>">
                            
                            <div class="flex justify-between items-start mb-5">
                                <div class="flex-1 pr-4">
                                    <h3 class="font-bold text-xl text-gray-800 group-hover:text-emerald-600 transition leading-snug line-clamp-2 mb-1"><%= job.job_title %></h3>
                                    <p class="text-sm font-medium text-gray-500 flex items-center gap-1.5">
                                        <span class="bg-gray-100 text-gray-600 px-2 py-0.5 rounded text-xs font-bold uppercase tracking-wider"><%= job.employer_name.substring(0,12) %></span>
                                    </p>
                                </div>
                                <div class="w-14 h-14 bg-white rounded-xl border border-gray-100 shadow-sm flex items-center justify-center p-2 flex-shrink-0 group-hover:scale-105 transition">
                                    <img src="<%= job.employer_logo || 'https://upload.wikimedia.org/wikipedia/commons/c/ca/LinkedIn_logo_initials.png' %>" class="w-full h-full object-contain filter grayscale group-hover:grayscale-0 transition duration-500" onerror="this.src='https://cdn-icons-png.flaticon.com/512/2910/2910791.png'">
                                </div>
                            </div>
                            
                            <div class="flex flex-wrap items-center gap-2 text-xs font-medium text-gray-500 mb-6">
                                <span class="flex items-center gap-1 bg-emerald-50 text-emerald-700 px-3 py-1.5 rounded-lg border border-emerald-100">
                                    <i class="fas fa-map-marker-alt"></i> <%= job.job_city || 'Remote' %>
                                </span>
                                <span class="flex items-center gap-1 bg-blue-50 text-blue-700 px-3 py-1.5 rounded-lg border border-blue-100">
                                    <i class="fas fa-check-circle"></i> Verified
                                </span>
                            </div>

                            <div class="grid grid-cols-2 gap-3 pt-4 border-t border-gray-100">
                                <a href="/job?id=<%= encodeURIComponent(job.job_id) %>" class="flex items-center justify-center py-3 rounded-xl border border-gray-200 text-gray-600 font-bold text-sm hover:bg-gray-50 hover:text-gray-900 transition">
                                    Details
                                </a>
                                <a href="<%= job.job_apply_link %>" target="_blank" class="flex items-center justify-center py-3 rounded-xl bg-gray-900 text-white font-bold text-sm hover:bg-black shadow-lg hover:shadow-xl transition transform hover:-translate-y-0.5">
                                    Apply Now <i class="fas fa-external-link-alt ml-2 text-xs opacity-70"></i>
                                </a>
                            </div>
                        </div>
                    <% }) %>

                <% } else { %>
                    <% results.forEach((tweet, index) => { %>
                        <div class="job-card bg-white rounded-2xl p-6 border border-gray-100 shadow-sm hover:shadow-2xl hover:shadow-blue-900/5 hover:-translate-y-1 transition-all duration-300 hidden fade-in flex flex-col h-full relative group" data-index="<%= index %>">
                            
                            <div class="flex items-center gap-4 mb-4">
                                <div class="w-12 h-12 rounded-full bg-black flex items-center justify-center text-white font-bold text-xl shadow-md ring-4 ring-gray-50 flex-shrink-0">
                                    X
                                </div>
                                <div class="flex-1 min-w-0">
                                    <h4 class="font-bold text-gray-900 text-base truncate">
                                        <%= tweet.name || 'Twitter User' %> 
                                        <i class="fas fa-check-circle text-blue-500 text-xs ml-1"></i>
                                    </h4>
                                    <p class="text-xs text-gray-500 font-medium truncate">@<%= tweet.screen_name %></p>
                                </div>
                                <div class="bg-blue-50 p-2 rounded-full text-blue-500">
                                    <i class="fab fa-twitter text-lg"></i>
                                </div>
                            </div>

                            <div class="bg-gray-50/80 p-5 rounded-2xl border border-gray-100 mb-6 flex-grow relative group-hover:bg-blue-50/30 transition">
                                <i class="fas fa-quote-left absolute top-3 left-3 text-gray-200 text-2xl -z-10"></i>
                                <p class="text-gray-800 text-sm leading-relaxed whitespace-pre-line font-medium text-ellipsis overflow-hidden">
                                    <%= tweet.text %>
                                </p>
                            </div>

                            <div class="grid grid-cols-2 gap-3 mt-auto pt-2">
                                
                                <button onclick="navigator.clipboard.writeText('<%= tweet.text %>'); alert('Details copied!');" class="w-full py-3 rounded-xl bg-gray-100 text-gray-600 text-xs font-bold hover:bg-gray-200 transition flex items-center justify-center gap-2 group/btn">
                                    <i class="far fa-copy group-hover/btn:scale-110 transition"></i> Copy
                                </button>
                                
                                <a href="https://x.com/<%= tweet.screen_name %>/status/<%= tweet.tweet_id || tweet.id_str %>" target="_blank" class="w-full py-3 rounded-xl bg-black text-white text-xs font-bold hover:bg-gray-900 transition flex items-center justify-center gap-2 shadow-lg group/btn">
                                    View on X <i class="fas fa-external-link-alt group-hover/btn:translate-x-1 transition"></i>
                                </a>

                            </div>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <div class="flex justify-center items-center gap-6 mt-16 pb-12 select-none">
                <button id="prevBtn" onclick="changePage(-1)" class="w-12 h-12 rounded-full bg-white border border-gray-200 text-gray-600 shadow-sm flex items-center justify-center hover:bg-emerald-50 hover:text-emerald-600 hover:border-emerald-200 transition disabled:opacity-30 disabled:cursor-not-allowed">
                    <i class="fas fa-arrow-left"></i>
                </button>
                
                <span class="font-bold text-gray-400 text-sm tracking-widest">
                    PAGE <span id="currentPageDisplay" class="text-emerald-600 text-lg mx-1">1</span> / <span id="totalPagesDisplay">1</span>
                </span>
                
                <button id="nextBtn" onclick="changePage(1)" class="w-12 h-12 rounded-full bg-emerald-600 border border-emerald-600 text-white shadow-lg shadow-emerald-600/30 flex items-center justify-center hover:bg-emerald-700 hover:scale-110 transition disabled:opacity-30 disabled:cursor-not-allowed disabled:transform-none">
                    <i class="fas fa-arrow-right"></i>
                </button>
            </div>

        <% } %>
    </div>

    <script>
        const cardsPerPage = 10;
        let currentPage = 1;
        const allCards = document.querySelectorAll('.job-card');
        const totalCards = allCards.length;
        const totalPages = Math.ceil(totalCards / cardsPerPage);

        function showPage(page) {
            if (totalCards === 0) return;
            if (page < 1) page = 1;
            if (page > totalPages) page = totalPages;
            currentPage = page;

            const start = (page - 1) * cardsPerPage;
            const end = start + cardsPerPage;

            allCards.forEach((card, index) => {
                if (index >= start && index < end) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });

            document.getElementById('currentPageDisplay').innerText = currentPage;
            document.getElementById('totalPagesDisplay').innerText = totalPages;
            document.getElementById('prevBtn').disabled = (currentPage === 1);
            document.getElementById('nextBtn').disabled = (currentPage === totalPages);

            // --- SCROLL FIX START ---
            const resultsDiv = document.getElementById('jobs-container');
            if(resultsDiv) {
                const yOffset = -140; 
                const y = resultsDiv.getBoundingClientRect().top + window.pageYOffset + yOffset;
                window.scrollTo({top: y, behavior: 'smooth'});
            }
            // --- SCROLL FIX END ---
        }

        function changePage(dir) { showPage(currentPage + dir); }
        if (totalCards > 0) showPage(1);
    </script>
</body>
</html>