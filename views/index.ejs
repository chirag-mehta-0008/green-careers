<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EcoCareers - Pro</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .fade-in { animation: fadeIn 0.5s; }
        @keyframes fadeIn { from { opacity: 0; } to { opacity: 1; } }
    </style>
</head>
<body class="bg-gray-50 font-sans flex flex-col min-h-screen">

    <nav class="bg-emerald-900 p-4 shadow-xl text-white sticky top-0 z-50">
        <div class="container mx-auto flex justify-between items-center">
            <h1 class="text-2xl font-bold flex items-center gap-2">
                <i class="fas fa-leaf text-emerald-400"></i> Eco<span class="text-emerald-200">Careers</span>
            </h1>
            <div class="text-xs bg-emerald-800 px-4 py-1.5 rounded-full border border-emerald-700">
                Found <%= results ? results.length : 0 %> Opportunities
            </div>
        </div>
    </nav>

    <div class="bg-white border-b border-gray-200 py-8 shadow-sm">
        <div class="container mx-auto px-4 max-w-6xl">
            <form action="/" method="GET" class="flex flex-col gap-6">
                <div class="flex justify-center p-1 bg-gray-100 rounded-xl w-fit mx-auto border border-gray-200">
                    <label class="cursor-pointer">
                        <input type="radio" name="source" value="linkedin" class="peer sr-only" <%= source === 'linkedin' ? 'checked' : '' %> onchange="this.form.submit()">
                        <div class="px-8 py-2.5 rounded-lg text-gray-500 font-bold transition-all peer-checked:bg-white peer-checked:text-emerald-700 peer-checked:shadow-sm flex items-center gap-2">
                            <i class="fas fa-briefcase"></i> Corporate Jobs
                        </div>
                    </label>
                    <label class="cursor-pointer">
                        <input type="radio" name="source" value="twitter" class="peer sr-only" <%= source === 'twitter' ? 'checked' : '' %> onchange="this.form.submit()">
                        <div class="px-8 py-2.5 rounded-lg text-gray-500 font-bold transition-all peer-checked:bg-white peer-checked:text-blue-500 peer-checked:shadow-sm flex items-center gap-2">
                            <i class="fab fa-twitter"></i> Direct Hiring
                        </div>
                    </label>
                </div>
                <div class="grid grid-cols-1 md:grid-cols-4 gap-4 bg-emerald-50/50 p-6 rounded-2xl border border-emerald-100">
                    <input type="text" name="keyword" value="<%= searchParams.keyword %>" class="p-3 rounded-lg border border-gray-300 outline-none" placeholder="Keyword">
                    <select name="work_type" class="p-3 rounded-lg border border-gray-300 bg-white outline-none">
                        <option value="">Any Type</option>
                        <option value="Remote" <%= searchParams.work_type === 'Remote' ? 'selected' : '' %>>üè† Remote</option>
                        <option value="Hybrid" <%= searchParams.work_type === 'Hybrid' ? 'selected' : '' %>>üè¢ Hybrid</option>
                        <option value="On-site" <%= searchParams.work_type === 'On-site' ? 'selected' : '' %>>üìç On-site</option>
                    </select>
                    <select name="location" class="p-3 rounded-lg border border-gray-300 bg-white outline-none">
                        <option value="India" <%= searchParams.location === 'India' ? 'selected' : '' %>>üáÆüá≥ India</option>
                        <option value="USA" <%= searchParams.location === 'USA' ? 'selected' : '' %>>üá∫üá∏ USA</option>
                        <option value="UK" <%= searchParams.location === 'UK' ? 'selected' : '' %>>üá¨üáß UK</option>
                    </select>
                    <button type="submit" class="bg-emerald-600 hover:bg-emerald-700 text-white font-bold py-3 px-4 rounded-lg shadow-md transition">Find Jobs</button>
                </div>
            </form>
        </div>
    </div>

    <div class="container mx-auto px-4 py-8 flex-grow max-w-5xl">
        
        <% if(error || results.length === 0) { %>
            <div class="text-center py-16 bg-white rounded-xl border border-dashed border-gray-300">
                <h3 class="text-xl font-bold text-gray-500">No jobs found üå±</h3>
                <p class="text-gray-400 mt-2">Trying searching for broader terms.</p>
            </div>
        <% } else { %>
            
            <div id="jobs-container" class="grid gap-6 <%= source === 'linkedin' ? 'grid-cols-1' : 'grid-cols-1 md:grid-cols-2' %>">
                <% if(source === 'linkedin') { %>
                    <% results.forEach((job, index) => { %>
                        <div class="job-card bg-white p-6 rounded-xl border border-gray-200 hover:border-emerald-500 hover:shadow-lg transition relative overflow-hidden group hidden fade-in" data-index="<%= index %>">
                            <div class="absolute top-0 left-0 w-1 h-full bg-emerald-500"></div>
                            <div class="flex justify-between items-start mb-4">
                                <div>
                                    <h3 class="font-bold text-lg text-gray-800 group-hover:text-emerald-700 leading-tight mb-1"><%= job.job_title %></h3>
                                    <p class="text-sm font-medium text-gray-500"><i class="far fa-building mr-1"></i> <%= job.employer_name %></p>
                                </div>
                                <img src="<%= job.employer_logo || 'https://upload.wikimedia.org/wikipedia/commons/c/ca/LinkedIn_logo_initials.png' %>" class="w-8 h-8 object-contain" onerror="this.src='https://cdn-icons-png.flaticon.com/512/2910/2910791.png'">
                            </div>
                            <div class="flex items-center gap-3 text-xs text-gray-500 mb-5">
                                <span class="bg-gray-100 px-2 py-1 rounded"><i class="fas fa-map-marker-alt mr-1"></i> <%= job.job_city || 'Remote' %></span>
                            </div>
                            <div class="grid grid-cols-2 gap-3">
                                <a href="/job?id=<%= encodeURIComponent(job.job_id) %>" class="text-center py-2 rounded-lg border border-gray-300 text-gray-600 font-bold text-sm hover:bg-gray-50 transition">Details</a>
                                <a href="<%= job.job_apply_link %>" target="_blank" class="text-center py-2 rounded-lg bg-emerald-600 text-white font-bold text-sm hover:bg-emerald-700 shadow-md transition">Apply</a>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <% results.forEach((tweet, index) => { %>
                        <div class="job-card bg-white p-6 rounded-xl border border-gray-200 shadow-sm hover:shadow-md transition hidden fade-in" data-index="<%= index %>">
                            <div class="flex items-center gap-3 mb-4">
                                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 font-bold"><%= tweet.screen_name ? tweet.screen_name[0].toUpperCase() : 'X' %></div>
                                <div><h4 class="font-bold text-sm"><%= tweet.name %></h4><p class="text-xs text-gray-500">@<%= tweet.screen_name %></p></div>
                                <i class="fab fa-twitter text-blue-400 ml-auto text-xl"></i>
                            </div>
                            <p class="text-gray-700 text-sm mb-4"><%= tweet.text %></p>
                            <button onclick="navigator.clipboard.writeText('<%= tweet.text %>'); alert('Copied!');" class="w-full py-2 rounded-lg bg-gray-900 text-white text-sm font-bold hover:bg-black transition">Copy Info</button>
                        </div>
                    <% }) %>
                <% } %>
            </div>

            <div class="flex justify-center items-center gap-4 mt-12 pb-10">
                <button id="prevBtn" onclick="changePage(-1)" class="px-5 py-2 rounded-lg bg-white border border-gray-300 text-gray-600 font-bold disabled:opacity-50 hover:bg-gray-50">Previous</button>
                <span id="pageIndicator" class="text-gray-600 font-bold">Page 1</span>
                <button id="nextBtn" onclick="changePage(1)" class="px-5 py-2 rounded-lg bg-emerald-600 text-white font-bold disabled:opacity-50 hover:bg-emerald-700">Next</button>
            </div>

        <% } %>
    </div>

    <script>
        const cardsPerPage = 10; // Sirf 10 dikhenge
        let currentPage = 1;
        const allCards = document.querySelectorAll('.job-card');
        const totalCards = allCards.length;
        const totalPages = Math.ceil(totalCards / cardsPerPage);

        function showPage(page) {
            if (totalCards === 0) return;
            if (page < 1) page = 1;
            if (page > totalPages) page = totalPages;
            currentPage = page;

            const start = (page - 1) * cardsPerPage;
            const end = start + cardsPerPage;

            allCards.forEach((card, index) => {
                if (index >= start && index < end) {
                    card.classList.remove('hidden');
                } else {
                    card.classList.add('hidden');
                }
            });

            document.getElementById('pageIndicator').innerText = `Page ${currentPage} of ${totalPages}`;
            document.getElementById('prevBtn').disabled = (currentPage === 1);
            document.getElementById('nextBtn').disabled = (currentPage === totalPages);
            
            // Scroll to top of results
            document.getElementById('jobs-container').scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        function changePage(dir) { showPage(currentPage + dir); }

        // Start
        if (totalCards > 0) showPage(1);
    </script>

</body>
</html>